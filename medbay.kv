<Screen6@Screen>:
    orientation: "vertical"
    search_input: search_box
    
    BoxLayout:
        orientation: "vertical"
        padding: root.width * .02, root.height *.02
        spacing: min(root.width, root.height) * .02
        Label:
            text: "Enter Pill Information"
            font_size: 30
            color: 0,0,0,1
        Label:
            text: "Pill Name"
            color: 0,0,0,1
            font_size: 20
        TextInput:
            id: search_box
        Label:
            text: "Amount Of Pills"
            color: 0,0,0,1
            font_size: 20
        TextInput:
        Label:
            text: "Dosage"
            color: 0,0,0,1
            font_size: 20
        TextInput:
        Button:
            text: "Save"
            on_press: root.search_gtin()
        Button:
            text: "Cancel"
            on_press: root.manager.current = 'screen_4'
    
        
