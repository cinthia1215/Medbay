        Label:
            text: "Hello"
            font_size: 30
            color: 0,0,0,1
        Button:
            text: "Add Pills"
            on_press: root.manager.current = 'screen_5'
        Button:
            text: "Set Schedule"
            on_press: root.manager.current = 'screen_8'
        Button:
            text: "Dispense Pills"
            on_press: root.manager.current = 'screen_7'
        Button:
            text: "View Schedule"
        Button:
            text: "Main Menu"
            on_press: root.manager.current = 'start_screen'

